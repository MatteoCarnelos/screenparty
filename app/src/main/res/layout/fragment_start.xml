<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrayBackground"
    tools:context=".ui.StartFragment" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/hostButton"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:background="@drawable/bordered_button"
            android:text="@string/host_button_text"
            android:textColor="@color/buttonText"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/joinButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/joinButton"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:background="@drawable/bordered_button"
            android:text="@string/join_button_text"
            android:textColor="@color/buttonText"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hostButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
